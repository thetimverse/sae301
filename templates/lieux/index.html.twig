{% block body %}
    <section id="main">
        <h1>Lieux Culturels</h1>
        <div id="events">
            {% for lieu in lieux %}
                <a href="{{ path('lieu_detail', {'lieu':lieu.id}) }}" class="lieu">
                    <div class="zoom">
                        <div class="image">
                            <img src="{{ asset ('img/' ~lieu.Image ) }}" alt="event">
                        </div>
                    </div>
                    <h2>{{ lieu.Nom }}</h2>
                    <div><i class="material-icons">pin_drop</i><h4>{{ lieu.Ville }}</h4></div>
                </a>
            {% endfor %}
        </div>
    </section>

    <script src="{{ asset('js/general.js') }}"></script>
{% endblock %}